// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Qualification {
  id    String     @id @default(cuid())
  name  String
}

model Tutor_Qualification {
  id    String     @id @default(cuid())
  tutor_id     Int
  qualification_id   Int
}

model user {
  id    String     @id @default(cuid())
  email String  @unique
  password  String
  name String?
  surname String?
  patronymic String?
  location String?
  birth_day DateTime?
  gender gender?
  role role
  tutor Tutor? 
  student Student?
}

  enum gender{
  // Мужской пол
  male
  // Женский пол
  female
  }

  enum role{
    tutor
    student
  }

model Tutor {
  id    String     @id @default(cuid())
  userid String @unique
  start_date DateTime?
  cost Int?
  about_me String?
  lessons String?
  for_whom String?
  user user @relation(fields: [userid], references: [id])
}

model Raiting_reviews {
  id    String     @id @default(cuid())
  student_id     Int
  tutor_id    Int
  comment String?
  rating  Decimal?
}

model Student {
  id    String     @id @default(cuid())
  userid String @unique
  user     user    @relation(fields: [userid], references: [id])
}

model Reserv {
  id    String     @id @default(cuid())
  sheadule_id     Int
  student_id   Int
  lessons_date DateTime
}

model Sheadule {
  id    String     @id @default(cuid())
  tutor_id     Int
  lessons_name   String
  dayofweek dayofweek
  lessons_start DateTime
  lessons_time DateTime
}

enum dayofweek{
  monday 
  tuesday
  wednesday
  thursday
  friday
  saturday
  sunday
  }